<?php

declare(strict_types=1);

use PHPUnit\Framework\TestCase;

require_once( __DIR__ . '/../src/SetUp.php');

final class SetUpTest extends TestCase {

	private $set_up;

protected function setUp() {

$this->set_up = new StatonLab\TripalTestSuite\SetUp();
}
 protected function tearDown()
    {
        $this->set_up = NULL;
    }

/**
*Assert that the Test Set Up constructs
*
**/
    public function testAdd()
    {
        $set_up = $this->set_up;
        $this->assertInstanceOf("StatonLab\TripalTestSuite\SetUp", $set_up);
    }

/**
* Tests that the setup method creates all expected folders and files exist.
*
* @dataProvider ExpectedFileProvider
*/

public function testCreateTestDirectory($file, $message) {
    $set_up = $this->set_up;
    $set_up->run();
    $this->assertTrue(file_exists($file), $message);
}
public function ExpectedFileProvider(){
  $dir = __DIR__;
  var_dump($dir);
  return [[$dir."/tests", "The tests directory does not exist."],
   [$dir . "/tests/ExampleTest.php.test", "The example test was not created"],
    [$dir . "/tests/example.env", "The example environment file was not created."],
     [$dir . "/travis.yml", "The travis.yml file was not created"]];

}

}
